<h1>Available Trips</h1>

{{#if trips}}
<ul class="trip-grid">
    {{#each trips}}
    <li class="trip-card">

        {{!-- Trip image --}}
        {{#if image}}
        <img src="{{image}}" alt="{{name}}" class="trip-cover" />
        {{/if}}

        <h2 class="trip-name">{{name}}</h2>
        {{!-- Trip description --}}
        <p class="trip-summary">{{description}}</p>

        <dl class="trip-meta">
            <div><dt>Code</dt><dd>{{code}}</dd></div>
            {{!-- length already includes “days” --}}
            <div><dt>Length</dt><dd>{{length}}</dd></div>
            <div><dt>Start</dt><dd>{{date start}}</dd></div>
            {{!-- perPerson = price per person --}}
            <div><dt>Price</dt><dd>{{currency perPerson}}</dd></div>
            {{#if rating}}
            <div><dt>Rating</dt><dd>{{rating}} / 5</dd></div>
            {{/if}}
        </dl>

        <a class="btn" href="#">Book</a>
    </li>
    {{/each}}
</ul>
{{else}}
<p>No trips available.</p>
{{/if}}
